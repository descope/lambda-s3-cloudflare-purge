  "license": "MIT",
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/globals": "^29.7.0",
    "@types/aws-lambda": "^8.10.138",
    "@types/node": "^20.12.12",
    "@typescript-eslint/eslint-plugin": "^7.10.0",
    "@typescript-eslint/parser": "^7.10.0",
    "esbuild": "^0.21.4",
    "eslint": "8.57.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.5",
    "nock": "^14.0.0-beta.6",
    "prettier": "^3.2.5",
    "ts-jest": "^29.1.3",
    "ts-node": "^10.9.2",
    "typescript": ">=4.3 <6"
  },
  "dependencies": {
    "cloudflare": "^3.2.0"
